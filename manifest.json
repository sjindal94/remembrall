{
  "name": "Remembrall - Password manager with hightened senses",
  "version": "1.0",
  "description": "Chrome extension for a password manager that warns user for password reuse, phishing attacks, and malicious links.",
  "manifest_version": 2,
  "minimum_chrome_version": "30",
  "author": "Shubham Jindal, Shivasagar, Anirudh",
  "homepage_url": "https://github.com/sjindal94/remembrall",
  "browser_action": {
    "default_title": "Click to set behaviour of Remembrall",
    "default_popup": "extension_popup.html",
    "default_icon": {
      "16": "icon/remembralloff_16x16.png",
      "19": "icon/remembralloff_19x19.png",
      "32": "icon/remembralloff_32x32.png",
      "38": "icon/remembralloff_38x38.png",
      "48": "icon/remembralloff_48x48.png",
      "64": "icon/remembralloff_64x64.png",
      "128": "icon/remembralloff_128x128.png"
    }
  },
  "background": {
    "scripts": [
      "lib/jquery.min.js",
      "lib/pouchdb-7.0.0.min.js",
      "lib/pbkdf2.js",
      "lib/pouchdb.find.js",
      "lib/jquery.csv.min.js",
      "js/bg_utils.js",
      "js/credential_store.js",
      "js/web_store.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "lib/jquery.min.js",
        "lib/pouchdb-7.0.0.min.js",
        "lib/pbkdf2.js",
        "lib/pouchdb.find.js",
        "js/bg_utils.js",
        "js/credential_store.js",
        "js/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}